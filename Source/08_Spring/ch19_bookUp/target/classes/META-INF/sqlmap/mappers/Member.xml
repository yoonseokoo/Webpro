<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="com.lec.ch19.dao.MemberDao">
	<resultMap type="Member" id="MemberResult">
		<result property="mid" column="mid"/>
		<result property="mpw" column="mpw"/>
		<result property="mname" column="mname"/>
		<result property="mmail" column="mmail"/>
		<result property="mpost" column="mpost"/>
		<result property="maddr" column="maddr"/>
	</resultMap>
	
	<select id="getMember"  parameterType="String" resultType="Member">
		<![CDATA[
			SELECT * FROM MEMBER WHERE MID=#{mid}
		]]>
	</select>
	<select id="idConfirm" resultType="String" parameterType="String">
		<![CDATA[
			SELECT COUNT(*) FROM MEMBER WHERE MID=#{mId}
		]]>
	</select>
	<insert id="joinMember" parameterType="Member">
		<![CDATA[
			INSERT INTO MEMBER VALUES
    			(#{mid}, #{mpw}, #{mname}, #{mmail}, #{mpost}, #{maddr})
		]]>
	</insert>
	<select id="loginCheck"  parameterType="String" resultType="Member">
		<![CDATA[
			SELECT * FROM MEMBER WHERE MID=#{mid} and MPW=#{mpw}
		]]>
	</select>
	<update id="modifyMember" parameterType="Member">
		<![CDATA[
			UPDATE MEMBER SET MPW=#{mpw},
                MNAME=#{mname},
                MMAIL = #{mmail},
                MADDR=#{maddr},
                MPOST = #{mpost}
    			WHERE MID=#{mid}
    	]]>
    </update>
</mapper>